@model PROG301_MVC.Models.AerialVehicle

@{
    ViewData["Title"] = "Create";

    List<SelectListItem> GetSelectListItems()
    {
        // Assuming you have a predefined list of names
        var names = ViewData["AVNames"] as List<string>;

        return names.Select(name => new SelectListItem { Text = name, Value = name }).ToList();
    }
}

<h1>AVController - Create</h1>

<h4>AerialVehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <select asp-for="Name" asp-items="@GetSelectListItems()" class="form-control"></select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxAltitude" class="control-label"></label>
                <input asp-for="MaxAltitude" class="form-control" />
                <span asp-validation-for="MaxAltitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultAltitudeChange" class="control-label"></label>
                <input asp-for="DefaultAltitudeChange" class="form-control" />
                <span asp-validation-for="DefaultAltitudeChange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentAltitude" class="control-label"></label>
                <input asp-for="CurrentAltitude" class="form-control" />
                <span asp-validation-for="CurrentAltitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}